rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    match /projects/{projectId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
      allow create: if request.auth != null;
      allow update: if true; // Allow server-side updates for invite acceptance
      allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }
    
    match /github_events/{eventId} {
      allow read: if request.auth != null;
      allow create: if true; // Allow server-side webhook processing
    }
    
    // GitHub Activity collection - stores processed webhook activities
    match /githubActivity/{activityId} {
      allow read: if request.auth != null; // Project members can read
      allow create: if true; // Allow server-side webhook processing
      allow update, delete: if false; // Activities are immutable once created
    }
    
    // Project Members collection - for member validation
    match /projectMembers/{memberId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
    
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
    
    match /invites/{inviteId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
    }
    
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
